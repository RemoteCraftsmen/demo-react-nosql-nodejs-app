{
    "name": "react-todo-backend",
    "version": "1.0.0",
    "description": "React todo backend",
    "main": "index.js",
    "scripts": {
        "start": "node ./bin/server.js",
        "dev": "nodemon ./bin/server.js",
        "test": "jest --verbose --runInBand --detectOpenHandles",
        "ci": "jest --verbose --runInBand --no-cache",
        "coverage": "jest --verbose --runInBand --no-cache --coverage",
        "dbsetup": "node ./db-setup.js",
        "swagger2json": "rm -f swagger.json & ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d swaggerDefinition.js swagger-doc/**/*.yml",
        "swagger2html": "rm -f ./public/swagger/script.js & scripts/swagger2html/index.js swagger.json ./public/swagger/script.js",
        "generate-swagger": "npm run swagger2json; npm run swagger2html"
    },
    "jest": {},
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "1.18.3",
        "connect-redis": "^3.4.1",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "express-async-errors": "^3.1.1",
        "express-session": "^1.15.6",
        "express-validator": "^6.12.0",
        "helmet": "^3.16.0",
        "http-status-codes": "^1.3.2",
        "lodash": "^4.17.11",
        "moment": "^2.22.2",
        "nano": "^8.0.1",
        "node-couchdb": "^1.3.0",
        "node-dependency-injection": "^2.7.0",
        "path": "^0.12.7",
        "request": "^2.88.0",
        "swagger-jsdoc": "6.1.0",
        "swagger-to-static": "1.0.3"
    },
    "devDependencies": {
        "axios": "^0.18.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^23.6.0",
        "babel-preset-env": "^1.7.0",
        "eslint": "^4.11.0",
        "faker": "^4.1.0",
        "jest": "^23.6.0",
        "nodemon": "^2.0.10"
    }
}
