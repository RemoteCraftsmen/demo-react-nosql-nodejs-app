{
    "name": "react-todo-backend",
    "version": "1.0.0",
    "description": "React todo backend",
    "main": "index.js",
    "scripts": {
        "dc-conf": "npm run dc-conf-${NODE_ENV:-dev}",
        "dc-conf-dev": "docker-compose -f docker-compose.prod.yml",
        "dc-conf-test": "docker-compose -f docker-compose.prod.yml --env-file .env.test",
        "dc-up": "npm run --silent dc-conf -- -- up -d",
        "dc-ps": "npm run --silent dc-conf -- -- ps",
        "dc-logs": "npm run --silent dc-conf -- -- logs -f",
        "dc-tail": "npm run --silent dc-logs -- --tail 5",
        "dc-down": "npm run --silent dc-conf -- -- down",
        "start": "node ./src/bin/server.js",
        "dev": "nodemon ./src/bin/server.js",
        "test": "jest --verbose --runInBand --detectOpenHandles",
        "ci": "jest --verbose --runInBand --no-cache",
        "coverage": "jest --verbose --runInBand --no-cache --coverage",
        "db-setup": "node ./src/scripts/dbSetup.js",
        "swagger2json": "rm -f swagger.json & ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d swaggerDefinition.js ./src/swagger-doc/**/*.yml",
        "swagger2html": "rm -f ./src/public/swagger/script.js & ./src/scripts/swagger2html/index.js swagger.json ./src/public/swagger/index.html",
        "generate-swagger": "npm run swagger2json; npm run swagger2html"
    },
    "jest": {},
    "license": "MIT",
    "dependencies": {
        "axios": "~0.21.1",
        "bcryptjs": "~2.4.3",
        "body-parser": "~1.19.0",
        "connect-redis": "~6.0.0",
        "cookie-parser": "~1.4.5",
        "cors": "~2.8.5",
        "dotenv": "~10.0.0",
        "express": "~4.17.1",
        "express-async-errors": "~3.1.1",
        "express-session": "~1.17.2",
        "express-validator": "~6.12.1",
        "helmet": "~4.6.0",
        "http-status-codes": "~2.1.4",
        "lodash": "~4.17.21",
        "nano": "~9.0.3",
        "node-couchdb": "~1.3.0",
        "node-dependency-injection": "~2.7.0",
        "path": "~0.12.7",
        "redis": "~3.1.2",
        "request": "~2.88.2",
        "swagger-jsdoc": "~6.1.0",
        "swagger-to-static": "~1.0.3"
    },
    "devDependencies": {
        "babel-core": "~6.26.3",
        "babel-jest": "~27.0.6",
        "babel-preset-env": "~1.7.0",
        "eslint": "~7.31.0",
        "faker": "~5.5.3",
        "jest": "~27.0.6",
        "nodemon": "~2.0.10"
    }
}
